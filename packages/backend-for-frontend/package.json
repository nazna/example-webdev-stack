{
  "name": "backend-for-frontend",
  "description": "Backend for Frontend with Nest.js",
  "version": "1.0.0",
  "author": "nazna <naoya3e@gmail.com>",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/nazna/example-webdev-stack/packages/backend-for-frontend",
  "scripts": {
    "dev": "npm run generate-typings && nest start --watch",
    "start": "node dist/main",
    "build": "nest build",
    "prebuild": "rimraf dist && npm run generate-typings",
    "test": "jest",
    "coverage": "jest --coverage",
    "generate-typings": "ts-node src/generate-typings.ts && prettier --write src/graphql.schema.ts",
    "lint": "npm run typecheck && npm run format",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@nestjs/common": "^7.4.2",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.2",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/platform-express": "^7.4.2",
    "apollo-datasource-rest": "^0.9.3",
    "apollo-server-express": "^2.16.1",
    "dataloader": "^2.0.0",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "superstruct": "^0.10.12"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.4.2",
    "@types/express": "^4.17.7",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "26.0.10",
    "@types/node": "^14.6.0",
    "@types/supertest": "^2.0.10",
    "jest": "26.4.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
